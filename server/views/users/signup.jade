extends auth

block auth
  .signup
      form(action="/users", method="post")
        .isite-avatar
         img.profile.avatar-224(src="data:image/png;base64,")

         .contactcontainer
          .half-left
            label(for="email") Identifiant
            input#username(type='text', name="username", placeholder='Username', value=user.username)

            label(for="email") Email
            input#email(type='text', name="email", placeholder='Email', value=user.email)

          .half-right

            label(for="email") Mot de passe
            input#password(type='password', name="password", placeholder='Password')

            label(for="email") Confirmation de mot passe
            input#password(type='password', name="confirm", placeholder='Confirmation')

         .footer
          button.button(type='submit') Inscription
          &nbsp;
          | ou&nbsp;
          a(href="/signin") Connexion
